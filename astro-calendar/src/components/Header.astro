  <div class="flex gap-2 sm:gap-4">
    <button id="btn-vacations" class="text-green p-1" title="Planificar Vacaciones">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path d="M20 7H4a2 2 0 00-2 2v10a2 2 0 002 2h16a2 2 0 002-2V9a2 2 0 00-2-2z"></path>
        <path d="M16 7V5a2 2 0 00-2-2h-4a2 2 0 00-2 2v2"></path>
      </svg>
    </button>
    <button id="btn-theme" class="text-red p-1" aria-label="Cambiar tema">
      <svg id="moon-icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12.79A9 9 0 1111.21 3 7 7 0 0021 12.79z"></path>
      </svg>
      <svg id="sun-icon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
